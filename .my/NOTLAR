    ├── src/
    │   ├── Config/                     // Contains configuration settings and environmental variables.
    │   │   └── AppConfig.php
    │   │   └── DatabaseConfig.php
    │   ├── Controller/                 // Handling main framework logic and request routing.
    │   │   └── BaseController.php      // Base controller with common functionalities.
    │   │   └── NoteController.php      // Specific controller for note operations.
    │   │   └── UserController.php      // Specific controller for user operations.
    │   ├── Core/                       // Core components of the framework.
    │   │   └── Application.php         // Initializes and manages the application lifecycle.
    │   │   └── Router.php              // Handles URL routing and dispatching to controllers.
    │   │   └── Database.php            // Manages database connections and queries.
    │   ├── Model/                      // Responsible for data handling and database operations.
    │   │   └── NoteModel.php           // Model for note-related database interactions.
    │   │   └── UserModel.php           // Model for user-related database interactions.
    │   └── routes.php                  // Configures and defines API routes.
